@model List<Libary.Models.Category>
@{
    ViewData["Title"] = "Categories";
}
<h2>📂 Categories</h2>
<a asp-action="Create" class="btn btn-success mb-3">+ Add Category</a>

<table class="table table-bordered">
    <thead>
        <tr><th>Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
